{
  "compilerOptions": {
    "checkJs": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
